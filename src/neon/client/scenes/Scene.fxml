<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<Label fx:id="introLabel" maxHeight="Infinity" maxWidth="Infinity" text="Loading intro..." style="-fx-font-size: 24px; -fx-alignment: center;" />
	</center>
	<bottom>
		<HBox styleClass="bottom-buttons">
			<children>
				<Button fx:id="continueButton" cancelButton="true" focusTraversable="false" text="Esc" />
				<Label text="Continue" />
			</children>
		</HBox>
	</bottom>
</BorderPane>