<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="480.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label fx:id="instructionLabel" styleClass="instructions" text="Instructions" />
   </top>
   <center>
      <GridPane hgap="10.0" vgap="5.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" />
          <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints vgrow="SOMETIMES" />
          <RowConstraints vgrow="SOMETIMES" />
          <RowConstraints vgrow="SOMETIMES" />
          <RowConstraints vgrow="SOMETIMES" />
          <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Game title:" />
            <TextField fx:id="titleField" GridPane.columnIndex="1" />
            <Label text="Parent modules" GridPane.rowIndex="1" />
            <ListView fx:id="parentList" GridPane.columnSpan="2" GridPane.rowIndex="2" prefHeight="300.0" />
            <Label text="Playable species" GridPane.rowIndex="3" />
            <ListView fx:id="speciesList" GridPane.columnSpan="2" GridPane.rowIndex="4" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </GridPane>
   </center>
   <bottom>
      <ButtonBar styleClass="bottom-buttons" BorderPane.alignment="CENTER">
        <buttons>
            <Button onAction="#okPressed" text="Ok" ButtonBar.buttonData="OK_DONE" />
          <Button onAction="#applyPressed" text="Apply" ButtonBar.buttonData="APPLY" />
            <Button onAction="#cancelPressed" text="Cancel" ButtonBar.buttonData="CANCEL_CLOSE" />
        </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
